h1 Dashboard
.row
  .span3 style="background-color: #eee; padding: 10px"
    h2 User Details
    ul.unstyled
      li= @user.display_name
      li= @user.name
      li= @user.email
      li= link_to "Edit profile", edit_user_path(@user.id)
br/
.row
  .span12
    h2 Most Recent Orders
    = render :partial => 'stores/shared/orders', :object => @orders
    = link_to "Show all orders", user_orders_path(@user.id)
