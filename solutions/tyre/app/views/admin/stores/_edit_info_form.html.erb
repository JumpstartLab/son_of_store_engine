<%= form_for([:admin, @store]) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "store_name" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Store', :class => "btn" %>
  </div>

<% end %>