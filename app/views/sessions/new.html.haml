%div{:style => "float:left;width:50%"}
  = simple_form_for @user, :url => { :action => 'create' } do |f|
    %fieldset
      %legend Sign in
      = f.input :email
      = f.input :password
      = f.submit 'Sign In', :class => "btn btn-primary controls"
%div{:style => "float:right;width:50%"}
  = render "users/form", :legend_title => "Sign up"
%div{:style => "float:left;width:50%"}
  = link_to "Continue As Guest", guest_cart_path, method: :post, :class => "btn btn-primary controls"
