<!DOCTYPE html>
<head></head>
<body>
  <h1>Order Confirmation for <%= @order.id %></h1>
  <table>
    <thead>
      <tr>
        <td>Quantity</td>
        <td>Product Name</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>product.quantity</td>
          <td>product.products.name</td>
          <td>product.price_cents</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
