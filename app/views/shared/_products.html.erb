  <h1><u>Products</u></h1>
  <% if @products.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <% if current_user && current_user.is_admin? %>
        <th>Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product_path(product) %></td>
        <td><%= product.description %></td>
        <td>$<%= product.decimal_price %></td>
        <% if current_user && current_user.is_admin? %>
        <td>
          <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-small' %>


<%= link_to '<i class= "icon-trash icon-white"></i> Delete'.html_safe, product_path(product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-small btn-danger' %>

        </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <h2>No products matched this description.</h2>
  <% end %>