  <div id="cart">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @cart.cart_items.each_with_index do |item, index| %>
        <tr>
          <td>
            <%= index + 1 %>
          </td>
          <td>
            <%= link_to item.product.title, product_path(item.product) %>
          </td>
          <td>
            <%= item.product.price %>
          </td>
        </tr>
        <% end %>
        <tr>
          <a class="btn btn-success"> <i class = 'icon-refresh'></i> Update Cart</a>
        </tr>
        <tr>
          <%= link_to "Clear Cart", edit_cart_path(@cart),
          :class => "btn btn-danger", :method => 'destroy',
          :confirm => 'Are you sure you want to empty the cart?' %>
        </tr>
      </tbody>
    </table>
  </div>