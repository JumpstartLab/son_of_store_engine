<h1><u>Products</u></h1>
<% if @products.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <% if current_user && current_user.is_admin %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product_path(product) %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <% if current_user && current_user.is_admin %>
          <td>
            <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', product_path(product), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h2>I'm sorry, there are no products in this category. Yet...</h2>
<% end %>
<%= link_to 'New', new_product_path, :class => 'btn btn-primary' if current_user && current_user.is_admin %>
