<h1>Product</h1>

<p>
  <b>Title</b><br>
  <%= @product.title %>
</p>
  <img src="<%= @product.image_url %>">
<p>
  <b>Description</b><br>
  <%= @product.description %>
</p>

<p>
  <b>Price</b><br>
  <%= @product.price %>
</p>

<p>
  <b>Categories</b><br>
  <ul>
  <% @product.categories.each do |category| %>
    <li><%= category.name %></li>
  <% end %>
  </ul>
</p>

<div class="form-actions">
  <%= link_to 'Back', products_path, :class => 'btn'  %>
  <%= link_to 'Add to Cart', cart_path(:product => @product), :method => :put, :class => 'btn' %>
  <% if current_user && current_user.is_admin %>
    <%= link_to 'Edit', edit_product_path(@product), :class => 'btn' %>
    <%= link_to 'Delete', product_path(@product), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <% end %>
</div>
