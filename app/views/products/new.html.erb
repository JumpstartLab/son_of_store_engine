<h2>New Product</h2>

<%= simple_form_for([current_store, @product]) do |p| %>
  <p>
    <%= p.label :title %> <br />
    <%= p.text_field :title %>
  </p>

   <p>
    <%= p.label :description %> <br />
    <%= p.text_area :description, :class => "input-xlarge", :size => "20x10" %> 
  </p>

  <p>
    <%= p.label :price, :required => true %> <br />
    <%= p.text_field :price %>
  </p>

  <p>
    <%= p.label :image_link %> <br />
    <%= p.text_field :image_link %>
  </p>

  <p>
    <%= p.submit %> 
  </p>

  <% end %>
