<%= simple_form_for @store do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.label :slug %>
<%= f.text_field :slug %>
<br/>
<br/>

<% if controller.action_name == "new" %>
  <%= f.submit :class => "btn-primary btn-large" %>
<% else %>
  <%= f.submit :class => "btn-primary btn-large", :confirm => "Are You Sure?" %>
<% end %>

<% end %>
