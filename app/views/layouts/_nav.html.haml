%header
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/"}
        .nav-collapse
          %ul.nav
            - main_navigation.each do |name, path| # From Nav Helper
              %li= link_to name, path, :class => tab_is_active?(path)
            = render 'search/search', :value => params[:q] || ""
            %li=link_to "Cart", cart_path
            %li
              %a
                %span.badge.badge#cart_count
                  = @cart.products.size
        / %a{:href => "/"}
        /   %img#logo{:alt => "Living Social Logo", :src => "/assets/logo.png"}
        
        