- cache(@category) do
  %h1 Products - #{@category.name}
  %br
  .row{:style => "padding:30px"}
    - if @category.sale
      %span.label.label-success{:style => "font-size:15px;"}
        All Products in this category are all on sale!
  #product_holder
    .span9
    - @products.each_slice(2) do |items_for_row|
      %li.span6
        = render :partial => 'products/list', :collection => items_for_row, :as => :product
    .span9
      = will_paginate @products
  #category_holder
    %br
    = render 'categories/list', :categories => @categories