= form_for @line_item, url: url do |f|
  .control-group
    = f.label :quantity, :class => 'control-label'
    .controls
      = f.number_field :quantity, :class => 'number_field'

  .form-actions
    = f.submit "Update Quantity", :class => 'btn btn-primary'
    = link_to 'Cancel', products_path(:domain), :class => 'btn'
