<h1>Your Profile</h1>

<div class="row">
  <div class="span3" style="background-color: #eee; padding: 10px">
    <h2>Your Details</h2>
    <ul class="unstyled">
      <li><%= @user.display_name %></li>
      <li><%= @user.name %></li>
      <li><%= @user.email %></li>
    </ul> 
  </div>

  <div class="span3" style="background-color: #eee; padding: 10px">
    <h2>Merchant info</h2>
    <%= link_to "Create a store", new_store_path, :class => "btn btn-primary" %>
  </div>
</div>

<br />

<div class="row">
  <div class="span12">
    <h2>Most Recent Orders</h2>
    <%= render :partial => 'shared/orders', :object => @orders %>
    <%= link_to "Show all orders", orders_path %>
  </div>
</div>