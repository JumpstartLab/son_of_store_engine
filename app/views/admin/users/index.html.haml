%h1 Dashboard - Users
= render :partial => "admin/nav"
%table#orders_by_status.table.table-bordered
  %th
  %th Name
  %th Email
  %th Orders
  - @users.each do |user|
    - cache("admin_user_index_with_id#{user.id}") do
      %tr{:id => "user_#{user.id}"}
        %td= link_to 'X', admin_user_path(user), :method => :delete
        %td= link_to user.name, user_path(user)
        %td= user.email
        %td= user.orders.count
= will_paginate @products