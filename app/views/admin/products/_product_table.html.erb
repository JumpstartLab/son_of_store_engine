<tr>
  <td><%= link_to product.name, admin_product_path(store_slug, product) %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td><%= image_tag(product.photo, :size => "50x50") %></td>
  <td><ul><% product.categories.each do |category| %>
      <div id="<%= dom_id category %>">
        <li><%= category.name %></li>
      </div>
      <% end %></ul>
  <td><%= link_to 'Add to cart', new_cart_product_path(:store_slug => store_slug, :product_id => product) %></td>
  <td><%= link_to 'Retire', product_retirement_path(store_slug, product), method: :post %></td>
</tr>