<%= form_for @user, :url => guest_path do |f| %>

  <%= render 'shared/errors', :object => @user, :field => :email %>
  <%= f.text_field :email, :placeholder => "E-mail Address" %>
  
  <%= f.hidden_field :guest, value: true %>
  <%= f.submit "Continue as guest", :class => "btn btn-large btn-primary" %>
<% end %>